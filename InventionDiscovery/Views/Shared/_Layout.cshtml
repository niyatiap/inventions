<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @RenderSection("head", required: false)
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title> INVENTIONS AND DISCOVERIES </title>
    <meta name="description" content="Free Bootstrap Theme by uicookies.com">
    <meta name="keywords" content="free website templates, free bootstrap themes, free template, free bootstrap, free website template">

    <link href="https://fonts.googleapis.com/css?family=Just+Another+Hand|Open+Sans:300,400" rel="stylesheet">
    <link rel="stylesheet" href=@Url.Content("~/Content/css/styles-merged.css")>
    <link rel="stylesheet" href=@Url.Content("~/Content/css/style.min.css")>
    <link rel="stylesheet" href=@Url.Content("~/Content/css/style.css")>
    <link rel="stylesheet" href=@Url.Content("~/Content/css/custom.css")>
   
    <!--[if lt IE 9]>
      <script src="js/vendor/html5shiv.min.js"></script>
      <script src="js/vendor/respond.min.js"></script>
    <![endif]-->

</head>
<body>
    <!-- START: header -->

    <div class="probootstrap-loader"></div>

    <header role="banner" class="probootstrap-header">
        <div class="container">
            <a href="@Url.Action("Index", "Home")" class="probootstrap-logo">INVENTIONS &amp; DISCOVERIES<span>.</span></a>

            <a href="#" class="probootstrap-burger-menu visible-xs"><i>Menu</i></a>
            <div class="mobile-menu-overlay"></div>

            <nav role="navigation" class="probootstrap-nav hidden-xs">
                <ul class="probootstrap-main-nav">
                    <li>@Html.ActionLink("Home","Index", "Home")</li>
                    <li>@Html.ActionLink("Search","List", "Home")</li>
                    <li>@Html.ActionLink("Add Facts","Create","Home")</li>                    
                </ul>
                <div class="extra-text visible-xs">
                    <a href="#" class="probootstrap-burger-menu"><i>Menu</i></a>
                    <h5>Connect</h5>
                    <ul class="social-buttons">
                        <li><a href="https://www.linkedin.com/in/niyati-patel-16122b15a"><i class="icon-linkedin2"></i></a></li>
                        <li><a href="https://github.com/niyatiap"><i class="icon-github2"></i></a></li>                        
                    </ul>
                </div>
            </nav>
        </div>
    </header>
    <!-- END: header -->
   
    <div>
        @RenderBody()
    </div>

    <footer class="probootstrap-footer probootstrap-bg" style="background-image: url(img/slider_3.jpg)">
        <div class="container">    
            <div class="row mb60">       
            <div class="row copyright">
                <div class="col-md-6">
                    <div class="probootstrap-footer-widget">
                        <p>&copy; 2018 <a href="https://inventions.niyatimpatel.co.uk/"> INVENTIONS &amp; DISCOVERIES </a> by <a href="https://niyatipatel.co.uk/">Niyati Patel</a></p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="probootstrap-footer-widget right">
                        <ul class="probootstrap-footer-social">
                            <li><a href="https://www.linkedin.com/in/niyati-patel-16122b15a"><i class="icon-linkedin2"></i></a></li>
                            <li><a href="https://github.com/niyatiap"><i class="icon-github2"></i></a></li>                            
                        </ul>
                    </div>
                </div>
            </div>   
            </div>
        </div>
    </footer>
    <div class="gototop js-top">
        <a href="#" class="js-gotop"><i class="icon-chevron-thin-up"></i></a>
    </div>
    <script src=@Url.Content("~/Content/js/scripts.min.js")></script>
    <script src=@Url.Content("~/Content/js/main.min.js")></script>
    <script src=@Url.Content("~/Content/js/custom.js")></script> 
</body>
</html>
